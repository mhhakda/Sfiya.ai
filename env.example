# ============================================
# SFIYA.AI - ENVIRONMENT CONFIGURATION
# Phase 1 Setup
# ============================================

# SUPABASE CONFIGURATION
# Get these from: https://app.supabase.com/project/[your-project]/settings/api
VITE_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_ANON_KEY_HERE

# These are for server-side (Backend/API Routes)
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY_HERE

# OPENAI CONFIGURATION
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE
OPENAI_ORG_ID=org-YOUR_ORG_ID

# RAZORPAY CONFIGURATION
RAZORPAY_KEY_ID=rzp_live_YOUR_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_KEY_SECRET
RAZORPAY_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# EMAIL CONFIGURATION (For sending OTP, Notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# OR use SendGrid
SENDGRID_API_KEY=SG.YOUR_KEY_HERE

# GOOGLE OAUTH (For Social Login)
GOOGLE_CLIENT_ID=YOUR_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_CLIENT_SECRET
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# JWT CONFIGURATION
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE_TIME=24h

# APP CONFIGURATION
NODE_ENV=development
ENVIRONMENT=development
APP_NAME=Sfiya.ai
APP_DOMAIN=http://localhost:3000
API_URL=http://localhost:3000/api
WEBHOOK_URL=http://localhost:3000/webhooks

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI CONFIGURATION
AI_PROVIDER=openai
AI_MODEL=gpt-4-turbo
MAX_TOKENS_PER_REQUEST=500
MAX_REQUESTS_PER_MINUTE=60

# DATABASE
DATABASE_URL=postgresql://user:password@localhost:5432/sfiya_db

# REDIS (Optional - for caching)
REDIS_URL=redis://localhost:6379

# STRIPE/RAZORPAY WEBHOOK
WEBHOOK_SECRET_RAZORPAY=whsec_YOUR_SECRET
WEBHOOK_SECRET_INSTAGRAM=YOUR_INSTAGRAM_WEBHOOK
WEBHOOK_SECRET_YOUTUBE=YOUR_YOUTUBE_WEBHOOK

# INSTAGRAM API
INSTAGRAM_BUSINESS_ACCOUNT_ID=YOUR_ACCOUNT_ID
INSTAGRAM_API_VERSION=v18.0
INSTAGRAM_GRAPH_API_TOKEN=YOUR_LONG_LIVED_TOKEN

# YOUTUBE API
YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY
YOUTUBE_CLIENT_ID=YOUR_CLIENT_ID
YOUTUBE_CLIENT_SECRET=YOUR_CLIENT_SECRET

# FACEBOOK API
FACEBOOK_APP_ID=YOUR_APP_ID
FACEBOOK_APP_SECRET=YOUR_APP_SECRET

# GMAIL API
GMAIL_CLIENT_ID=YOUR_CLIENT_ID
GMAIL_CLIENT_SECRET=YOUR_CLIENT_SECRET

# ENCRYPTION
ENCRYPTION_KEY=your-32-char-encryption-key-

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# LOGGING
LOG_LEVEL=debug
LOG_FORMAT=json

# STRIPE KEYS (Future Payment Provider)
STRIPE_PUBLIC_KEY=pk_test_YOUR_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_KEY

# TWILIO (For SMS OTP - Optional)
TWILIO_ACCOUNT_SID=YOUR_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# SENTRY (Error Tracking - Optional)
SENTRY_DSN=https://YOUR_KEY@YOUR_ID.ingest.sentry.io/YOUR_PROJECT_ID

# ANALYTICS (Optional)
GOOGLE_ANALYTICS_ID=GA-YOUR_ID
MIXPANEL_TOKEN=YOUR_TOKEN

# STORAGE
# For file uploads (images, videos, etc.)
SUPABASE_STORAGE_BUCKET=sfiya-uploads
UPLOAD_MAX_SIZE_MB=50

# PAGINATION
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# CACHE (Redis)
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=true

# FEATURE FLAGS
FEATURE_B2B_ENABLED=true
FEATURE_AFFILIATE_ENABLED=true
FEATURE_API_ACCESS_ENABLED=true
FEATURE_WEBHOOK_ENABLED=true

# SUBSCRIPTION
FREE_PLAN_AUTO_REPLIES=100
STARTER_PLAN_AUTO_REPLIES=5000
PRO_PLAN_AUTO_REPLIES=50000
ENTERPRISE_PLAN_AUTO_REPLIES=500000

# ADMIN
ADMIN_EMAIL=admin@sfiya.ai
ADMIN_PASSWORD_HASH=should-be-hashed-securely